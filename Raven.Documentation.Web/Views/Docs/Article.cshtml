@using Raven.Documentation.Web.Helpers
@model Raven.Documentation.Web.Models.ArticleModel
@{
    ViewBag.Title = Model.Title;
}
@section scripts {
    <script type="text/javascript">
        $('table', '#article').each(function () {
            var div = $('<div></div>')
                .attr({
                    'class': 'table-responsive'
                });
            $(this).attr({
                'class': 'table table-striped table-bordered table-condensed'
            }).wrap(div);
        });
    </script>
}
<div id="article">
    <div class="row">
        <div class="col-md-3 col-lg-2 col-lg-offset-1">
            @Html.GenerateTableOfContents(Url, Model.TableOfContents, Model.Key)
        </div>
        <div class="col-md-9 col-lg-8">
            @Html.Raw(Model.HtmlContent)
        </div>
    </div>
</div>

